#app
    width: 100%
    height: 800px
    .header
        top: 0
        height: 15%
        border-bottom: 1px solid red
        .logo
            display: inline-block
            float: left
            width: 15%
            background-color: white
        .nav-sub
            float: left
            width: 65%
            background-color: green
        .user
            float: left
            width: 20%
            background-color: blue

    .main
        .filter
            height: 15%
            background-color: #00F5FF
        .content
            height: 70%
            background-color: gray

    .footer
        bottom: 0
        height: 15%
        text-align: center
        background-color: #6756ea
        .nav-main
            display: inline-block
            width: 70%
            height: 100%
            text-align: center
            background-color: #f1c85f
