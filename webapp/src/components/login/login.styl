@import "../../common/stylus/mixin.styl"

#login
    background-size: cover;
    background-image: url(bg1.jpg);
    font-family: 'Open Sans', sans-serif;
    width: 100%
    .login-box
        position: fixed
        display: flex
        flex-direction: column
        align-items: center
        top: 20%
        right: 5%
        padding: 20px 50px
        width: 30%
        height: 50%
        .title
            margin-bottom: 10px
            width: 80%
            height: 50px
            text-align: center
            color: rgba(0, 0, 139, .8)
            font-size: 30px
        .user
            background-color: rgba(105, 105, 105, .3)
            border-radius: 15px
            height: 200px
            width: 80%
            div
                padding: 5%
                i
                    height: 100%
                    width: 25%
                    padding-right: 5%
                    color: #ffffff
                input
                    padding-left: 8%
                    height: 100%
                    width 70%
                    background-color: rgba(105, 105, 105, 0)
                    border-left: 1px solid rgba(255, 255, 255, .5)
                    color: #ffffff
            .account
                height: 32.5%
                border-bottom-setter(1px, rgba(255, 255, 255, .5))
            .password
                height: 32.5%
        .login-in
            margin-top: 5%
            padding: 10px
            width: 70%
            text-align: center
            background-color: rgba(105, 105, 105, .3)
            border-radius: 5px
            color: #ffffff
            font-size: 25px
            cursor: pointer