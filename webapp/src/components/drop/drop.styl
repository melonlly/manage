.drop
    position: relative
    height: 36px
    line-height: 34px
    border: 1px solid #E6E7E8
    border-radius: 20px
    .input
        position: relative
        display: block
        padding: 0 20px
        height: 100%
        font-size: 14px
        color: #282f35
        cursor: pointer
        input
            width: 100%
            height: 100%
            cursor: pointer
        i
            position: absolute
            right: 0
            top: 0
            width: 36px
            height: 36px
            background: url(/static/images/expand.png) no-repeat center
            transition: transform .3s $cubic-bezier
            &.open
                transform: rotate(180deg)
    .drop_ul
        position: absolute
        z-index: 1000
        margin-top: 1px
        width: 100%
        max-height: 300px
        overflow-x: hidden
        overflow-y: auto
        background: #ffffff
        border-radius: 16px
        box-shadow: 3px 5.196px 16px 0px rgba(0, 0, 0, .06)
        li
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
            a
                display: block
                padding: 0 20px
                height: 44px
                line-height: 44px
                color: #282F35
                font-size: 12px
                &:hover
                    $hover()

.drop-enter-active, .drop-leave-active{
    transition: all .2s $cubic-bezier
    transform-origin: 50% 0
    transform: scaleY(1)
}
.drop-enter, .drop-leave-active {
    transform: scaleY(0)
}
