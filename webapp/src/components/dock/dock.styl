.dock
    height: 100%
    &::before
        content: ''
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        z-index: -1
        transform: scaleY(.85) perspective(100px) rotateX(5deg)
        transform-origin: bottom
        border-radius: 10px
        background-color: rgba(192, 192, 192 .5)
    ul
        display: flex
        justify-content: center
        height: 100%
        li
            margin: 0 2%
            background-color: rgba(192, 192, 192 .5)
            cursor: pointer
            &.active
                background-color: greenyellow