$header-h = 64px /* header高度 */

.user
    padding-right: 20px
    color: $sub-color
    background-color: $color
    .content
        float: right
        .text
            height: $header-h
        .exit
            $icon(50px, 'exit.png')
            border-radius: 50%
            &:hover
                background-color: rgba(255, 255, 255, .1)