#index
    width: 100%
    .header
        display: flex
        top: 0
        height: 10%
        .logo
            width: 10%
            background-color: greenyellow
        .nav-sub
            width: 70%
            background-color: #122644
            ul
                display: flex
                height: 100%
                li
                    height: 100%
                    background-color: #122644
        .user
            display: flex
            justify-content: flex-end
            align-items: center
            width: 20%
            background-color: #001937

    .main
        height: 90%
        .content
            height: 100%
            //background-color: #0450D7

    .footer
        position: fixed
        bottom: 0
        margin-left: 10%
        width: 80%
        height: 10%
        .nav-main
            width: 100%
            height: 100%
            &::before
                content: ''
                position: absolute
                top: 0
                right: 0
                bottom: 0
                left: 0
                z-index: -1
                transform: scaleY(.85) perspective(100px) rotateX(5deg)
                transform-origin: bottom
                border-radius: 10px
                background-color: rgba(192, 192, 192 .5)
            ul
                display: flex
                justify-content: center
                height: 100%
                li
                    margin: 0 20px
                    width: 130px
                    height: 100%
                    line-height: 100%
                    background-color: rgba(192, 192, 192 .5)