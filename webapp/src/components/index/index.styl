#index
    width: 100%
    .header
        display: flex
        top: 0
        height: 10%
        .logo
            width: 10%
            background-color: #001937
        .nav-sub
            width: 70%
            background-color: #122644
            ul
                display: flex
                height: 100%
                li
                    height: 100%
                    background-color: #122644
        .user
            display: flex
            justify-content: flex-end
            align-items: center
            width: 20%
            background-color: #001937

    .main
        height: 90%
        .content
            height: 100%
            background-color: #0450D7

    .footer
        position: fixed
        bottom: 0
        margin-left: 10%
        width: 80%
        height: 15%
        .nav-main
            width: 100%
            height: 100%
            background-color: #122644
            ul
                display: flex
                justify-content: center
                height: 100%
                li
                    width: 150px
                    height: 100%
                    line-height: 100%
                    background-color: #122644