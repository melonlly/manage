.cov-vue-date
    display: inline-block;
    color: #5D5D5D;
    .datepicker-overlay
        position: fixed;
        width: 100%;
        height: 100%;
        z-index: 998;
        top: 0;
        left: 0;
        overflow: hidden;
        animation: fadein 0.5s;
        .cov-date-body
            background: #3F51B5;
            overflow: hidden;
            font-size: 16px;
            font-family: 'Roboto';
            font-weight: 400;
            position: fixed;
            display: block;
            width: 400px;
            max-width: 100%;
            z-index: 999;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.2);
            .cov-date-monthly
                height: 150px;
                div
                    display: inline-block;
                    padding: 0;
                    margin: 0;
                    vertical-align: middle;
                    color: #fff;
                    height: 150px;
                    float: left;
                    text-align: center;
                    cursor: pointer;
                .cov-date-previous, .cov-date-next
                    position: relative;
                    width: 20% !important;
                    text-indent: -300px;
                    overflow: hidden;
                    color: #fff;
                    &:hover
                        background: rgba(255, 255, 255, 0.1);
                    &::before
                        width: 20px;
                        height: 2px;
                        text-align: center;
                        position: absolute;
                        background: #fff;
                        top: 50%;
                        margin-top: -7px;
                        margin-left: -7px;
                        left: 50%;
                        line-height: 0;
                        content: '';
                        transform: rotate(45deg);
                    &::after
                        width: 20px;
                        height: 2px;
                        text-align: center;
                        position: absolute;
                        background: #fff;
                        margin-top: 6px;
                        margin-left: -7px;
                        top: 50%;
                        left: 50%;
                        line-height: 0;
                        content: '';
                        transform: rotate(-45deg);
                .cov-date-previous::before
                    transform: rotate(-45deg);
                .cov-date-previous::after
                    transform: rotate(45deg);
                .cov-date-caption
                    width: 60%;
                    padding: 50px 0!important;
                    box-sizing: border-box;
                    font-size: 24px;
                    span
                        &:hover
                            color: rgba(255, 255, 255, 0.7);
            .cov-date-box
                .cov-picker-box
                    background: #fff;
                    width: 100%;
                    display: inline-block;
                    padding: 25px;
                    box-sizing: border-box !important;
                    -moz-box-sizing: border-box !important;
                    -webkit-box-sizing: border-box !important;
                    -ms-box-sizing: border-box !important;
                    width: 400px;
                    max-width: 100%;
                    height: 280px;
                    text-align: start!important;
                    .date-item
                        text-align: center;
                        font-size: 20px;
                        padding: 10px 0;
                        cursor: pointer;
                        &:hover
                            background: #e0e0e0;
                    .watch-box
                        height: 100%;
                        overflow: hidden;
                        .hour-box, .min-box
                            display: inline-block;
                            width: 50%;
                            text-align: center;
                            height: 100%;
                            overflow: auto;
                            float: left;
                            &.active
                                background: #F50057;
                                color: #FFF !important;
                            .hour-item, .min-item
                                padding: 10px;
                                font-size: 36px;
                                cursor: pointer;
                                &:hover
                                    background: #E3E3E3;
                    td
                        height: 34px;
                        width: 34px;
                        padding: 0;
                        line-height: 34px;
                        color: #000;
                        background: #fff;
                        text-align: center;
                        cursor: pointer;
                        &:hover
                            background: #E6E6E6;
                    .day
                        width: 14.2857143%;
                        display: inline-block;
                        text-align: center;
                        cursor: pointer;
                        height: 34px;
                        padding: 0;
                        line-height: 34px;
                        color: #000;
                        background: #fff;
                        vertical-align: middle;
                        &:hover
                            background: #EAEAEA;
                    .passive-day
                        color: #bbb;
                    .checked
                        background: #F50057;
                        color: #FFF !important;
                        border-radius: 3px;
                        &:hover
                            background: #FF4F8E;
                    .unavailable
                        color: #ccc;
                        cursor: not-allowed;
                        &:hover
                            background: none;
                    .week
                        ul
                            margin: 0 0 8px;
                            padding: 0;
                            list-style: none;
                            li
                                width: 14.2%;
                                display: inline-block;
                                text-align: center;
                                background: transparent;
                                color: #000;
                                font-weight: bold;
                .date-list
                    overflow: auto;
                    vertical-align: top;
                    padding: 0;
